{
  "name": "docker-nest-typegoose",
  "version": "0.0.2",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch src && tslint-check",
    "debug": "DEBUG=* yarn start",
    "start": "nodemon ./src/server.ts",
    "start:prod": "NODE_ENV=prod pm2 start ./dist/server.js",
    "build": "tsc",
    "run:prod": "yarn build && yarn tslint && yarn start:prod",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:check": "npx tslint-config-prettier-check ./tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "doc": "yarn compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "yarn compodoc -s"
  },
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "~6.6.7",
    "@nestjs/core": "~6.6.7",
    "@nestjs/platform-express": "~6.6.7",
    "@nestjs/swagger": "~3.1.0",
    "class-validator": "^0.10.0",
    "dotenv": "^8.1.0",
    "mongoose": "^5.6.13",
    "nestjs-typegoose": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.0.7",
    "typegoose": "^5.9.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.10",
    "@types/dotenv": "^6.1.1",
    "@types/mongoose": "^5.5.17",
    "@types/node": "^12.7.4",
    "nodemon": "^1.19.2",
    "prettier": "~1.18.2",
    "ts-node": "^8.3.0",
    "tslint": "~5.19.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.6.2"
  }
}
