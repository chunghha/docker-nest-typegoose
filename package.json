{
  "name": "docker-nest-typegoose",
  "version": "0.0.2",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch src && tslint-check",
    "debug": "DEBUG=* yarn start",
    "start": "nodemon ./src/server.ts",
    "start:prod": "NODE_ENV=prod pm2 start ./dist/server.js",
    "build": "tsc",
    "run:prod": "yarn build && yarn tslint && yarn start:prod",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:check": "npx tslint-config-prettier-check ./tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "doc": "yarn compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "yarn compodoc -s"
  },
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^5.7.3",
    "@nestjs/core": "^5.7.3",
    "@nestjs/swagger": "^2.5.1",
    "class-validator": "^0.9.1",
    "dotenv": "^6.2.0",
    "mongoose": "^5.4.15",
    "nestjs-typegoose": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "typegoose": "^5.5.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.8",
    "@types/dotenv": "^6.1.0",
    "@types/mongoose": "^5.3.19",
    "@types/node": "^10.12.27",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.2",
    "tslint": "~5.12.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.3.3333"
  }
}
