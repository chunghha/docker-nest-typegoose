{
  "name": "docker-nest-typegoose",
  "version": "0.0.2",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch src && tslint-check",
    "debug": "DEBUG=* yarn start",
    "start": "nodemon ./src/server.ts",
    "start:prod": "NODE_ENV=prod pm2 start ./dist/server.js",
    "build": "tsc",
    "run:prod": "yarn build && yarn tslint && yarn start:prod",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:check": "npx tslint-config-prettier-check ./tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "doc": "yarn compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "yarn compodoc -s"
  },
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "~6.1.0",
    "@nestjs/core": "~6.1.0",
    "@nestjs/platform-express": "~6.1.0",
    "@nestjs/swagger": "~3.0.2",
    "class-validator": "^0.9.1",
    "dotenv": "^7.0.0",
    "mongoose": "^5.5.1",
    "nestjs-typegoose": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "swagger-ui-express": "^4.0.2",
    "typegoose": "^5.6.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.9",
    "@types/dotenv": "^6.1.1",
    "@types/mongoose": "^5.3.26",
    "@types/node": "^10.14.4",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "ts-node": "^8.0.3",
    "tslint": "~5.15.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.4.3"
  }
}
