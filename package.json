{
  "name": "docker-nest-typegoose",
  "version": "0.1.0",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch src && tslint-check",
    "debug": "DEBUG=* yarn start",
    "start": "nodemon ./src/server.ts",
    "start:prod": "NODE_ENV=prod pm2 start ./dist/server.js",
    "build": "tsc",
    "run:prod": "yarn build && yarn tslint && yarn start:prod",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:check": "npx tslint-config-prettier-check ./tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "doc": "yarn compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "yarn compodoc -s"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@nestjs/common": "~6.10.10",
    "@nestjs/core": "~6.10.10",
    "@nestjs/platform-express": "~6.10.10",
    "@nestjs/swagger": "~4.0.9",
    "@typegoose/typegoose": "^6.1.7",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "mongoose": "^5.8.0",
    "nestjs-typegoose": "^7.0.0",
    "pjson": "^1.0.9",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@types/dotenv": "^8.2.0",
    "@types/mongoose": "^5.5.34",
    "@types/node": "^12.12.17",
    "nodemon": "^2.0.1",
    "prettier": "~1.19.1",
    "ts-node": "^8.5.4",
    "tslint": "~5.20.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.7.3"
  }
}
