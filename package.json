{
  "name": "docker-nest-typegoose",
  "version": "0.7.0",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn build",
    "start:prod": "cross-env-shell NODE_ENV=prod pm2 start ecosystem.config.js",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "doc": "npx compodoc --theme material -p ./tsconfig.json",
    "doc:serve": "npx compodoc -s",
    "commitmsg": "commitlint -e",
    "release": "standard-version --no-verify"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nest-middlewares/cors": "^6.0.1",
    "@nest-middlewares/helmet": "^6.0.0",
    "@nest-middlewares/response-time": "^6.0.0",
    "@nestjs/common": "~8.0.6",
    "@nestjs/core": "~8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/swagger": "~4.8.2",
    "@typegoose/typegoose": "8.1.1",
    "class-transformer": "~0.4.0",
    "class-validator": "~0.13.1",
    "dotenv": "^10.0.0",
    "helmet": "3.23.3",
    "lodash": "^4.17.21",
    "mongoose": "~5.13.7",
    "nest-router": "^1.0.9",
    "nest-winston": "^1.5.0",
    "nestjs-typegoose": "^7.1.38",
    "pjson": "^1.0.9",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "rxjs": "~7.3.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "@compodoc/compodoc": "^1.1.14",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.7",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.172",
    "@types/node": "^14.17.11",
    "@typescript-eslint/eslint-plugin": "~4.29.2",
    "@typescript-eslint/parser": "~4.29.2",
    "cross-env": "^7.0.3",
    "eslint": "~7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "husky": "^7.0.1",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "~2.3.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "~4.3.5"
  },
  "importSort": {
    ".ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
