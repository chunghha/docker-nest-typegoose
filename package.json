{
  "name": "docker-nest-typegoose",
  "version": "0.8.0",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn build",
    "start:prod": "cross-env-shell NODE_ENV=prod pm2 start ecosystem.config.js",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "check:all": "yarn lint && yarn format && yarn test",
    "commitmsg": "commitlint -e",
    "release": "standard-version --no-verify"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nest-middlewares/cors": "^6.0.1",
    "@nest-middlewares/helmet": "^6.0.0",
    "@nest-middlewares/response-time": "^6.0.0",
    "@nestjs/common": "~8.2.6",
    "@nestjs/core": "~8.2.6",
    "@nestjs/mongoose": "~9.0.2",
    "@nestjs/platform-express": "~8.2.6",
    "@nestjs/swagger": "~5.2.0",
    "@typegoose/typegoose": "~9.5.0",
    "class-transformer": "~0.5.1",
    "class-validator": "~0.14.0",
    "dotenv": "^15.0.0",
    "helmet": "3.23.3",
    "lodash": "^4.17.21",
    "mongoose": "~6.1.10",
    "nest-router": "^1.0.9",
    "nest-winston": "^1.6.2",
    "pjson": "^1.0.9",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "rxjs": "~7.5.2",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.5.1",
    "winston-daily-rotate-file": "^4.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-angular": "^16.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.8",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "~5.10.2",
    "@typescript-eslint/parser": "~5.10.2",
    "cross-env": "^7.0.3",
    "eslint": "~8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.1",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "prettier": "~2.5.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "~4.5.5"
  },
  "importSort": {
    ".ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
